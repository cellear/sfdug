{#
/**
 * @file
 * Session node full view template.
 */
#}
<article{{ attributes.addClass('session-full') }}>
  {{ title_prefix }}
  <h1{{ title_attributes.addClass('session-full__title') }}>{{ label }}</h1>
  {{ title_suffix }}

  {% if content.field_session_video[0] %}
    <div class="session-full__video">
      {{ content.field_session_video }}
    </div>
  {% endif %}

  <div class="session-full__content">
    {% if display_submitted %}
      <div class="session-full__meta">
        {{ metadata }}
      </div>
    {% endif %}

    {% if content.field_description|render %}
      <div class="session-full__description">
        {{ content.field_description }}
      </div>
    {% endif %}

    {% if content.body|render %}
      <div class="session-full__body">
        {{ content.body }}
      </div>
    {% endif %}

    {% if content.field_person_speakers|render %}
      <div class="session-full__speakers">
        <h3>Speakers</h3>
        {{ content.field_person_speakers }}
      </div>
    {% endif %}

    {% if content.field_organizers|render %}
      <div class="session-full__organizers">
        <h3>Organizers</h3>
        {{ content.field_organizers }}
      </div>
    {% endif %}

    {% if content.field_slides|render %}
      <div class="session-full__slides">
        <h3>Slides</h3>
        {{ content.field_slides }}
      </div>
    {% endif %}

    {{ content|without('field_session_video', 'field_description', 'body', 'field_person_speakers', 'field_organizers', 'field_slides') }}
  </div>
</article>
